{
  "source": [
    "src/tokens/tokens-output.json"
  ],
  "platforms": {
    "scss": {
      "options": {
        "showFileHeader": false,
        "outputReferences": true
      },
      "transforms": [
        "attribute/cti",
        "name/cti/kebab"
      ],
      "transformGroup": "scss",
      "prefix": "hive",
      "buildPath": "src/scss/00-tokens/",
      "files": [
        {
          "destination": "_tokens.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
